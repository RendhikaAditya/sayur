<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.UploadFoto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambahkan Foto Profile"
        android:textSize="19dp"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/lineshadow"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/prouser"
        android:layout_marginTop="150dp"
        app:civ_border_width="3dp"
        android:padding="5dp"
        android:id="@+id/fotoPlace"
        android:scaleType="centerCrop"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="pick mage"
        android:textColor="@color/satu"
        android:drawableRight="@drawable/ic_file_upload_black_24dp"
        android:drawablePadding="10dp"
        android:background="@drawable/btn"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:id="@+id/pickImage"
        android:layout_marginTop="30dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@color/satu"
            android:text="simpan"
            android:id="@+id/simpanFoto"
            android:textColor="@color/light"
            android:textSize="18dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:id="@+id/skipFoto"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:textColor="@color/satu"
            android:background="@drawable/btn"
            android:layout_marginLeft="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

    </LinearLayout>
</LinearLayout>