<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:padding="25dp"
    android:orientation="vertical"
    android:background="#F8F8F8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Transaksi :"
        android:textSize="22dp"
        android:textColor="#1a1a1a"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_margin="10dp"
        android:id="@+id/viewjumlah">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Jumlah : "
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:textColor="#000"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/btnjml"
            android:layout_marginRight="20dp"
            android:src="@drawable/kurang"
            android:padding="1dp"
            android:id="@+id/minusjumblah"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="18dp"
            android:id="@+id/numbrjumblah"/>


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/btnjml"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_add_black_24dp"
            android:id="@+id/plusjumblah"/>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/submitbtn"
        android:text="Beli Sekarang"
        android:textColor="@color/light"
        android:layout_marginTop="10dp"
        android:id="@+id/btnTansaksi"/>

</LinearLayout>